<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/program_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:layout_marginTop="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.triolabs.radio_uaa_android.SplashActivity$PlaceholderFragment" >

    <RelativeLayout
        android:id="@+id/program_detail_layout_info"
        android:layout_width="match_parent"
        android:animateLayoutChanges="true"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/program_detail_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp" >

            <ImageView
                android:id="@+id/program_detail_banner"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:alpha=".8"
                android:contentDescription="@string/program_detail_banner_d"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_alignTop="@+id/program_detail_banner" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha=".7"
                    android:background="@color/green_dark" />

                <TextView
                    android:id="@+id/program_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:gravity="right|bottom"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="Large Text"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignBottom="@+id/program_detail_banner" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha=".7"
                    android:background="@color/green_dark" />

                <TextView
                    android:id="@+id/program_detail_schedule_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:text="@string/schedule_label"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/program_detail_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/program_detail_schedule_label"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progress_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminate="true"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/program_detail_social"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/program_detail_header"
            android:orientation="horizontal" >

            <LinearLayout
                 android:id="@+id/program_detail_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="@color/green_dark"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/program_detail_text_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/program_detail_social"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:id="@+id/program_see_more"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="false"
                        android:layout_centerVertical="true"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/icon_see_more" >

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/RelativeLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:background="@color/green_low"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/program_detail_twitter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:background="@color/green_medium"
                            android:paddingLeft="20dp"
                            android:src="@drawable/twitter" />

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="-5dp"
                            android:layout_marginLeft="-5dp"
                            android:layout_marginTop="-5dp"
                            android:background="@drawable/pleca_dark" >
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/green_medium"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/program_detail_facebook"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/green_low"
                            android:src="@drawable/facebook" />

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="-5dp"
                            android:layout_marginLeft="-5dp"
                            android:layout_marginTop="-2dp"
                            android:background="@drawable/pleca_c" >
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="false"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="-5dp"
                            android:layout_marginRight="-5dp"
                            android:layout_marginTop="-2dp"
                            android:background="@drawable/pleca_c_r" >
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/program_detail_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/program_detail_social"
            android:animateLayoutChanges="true"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/program_detail_info"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                   

                    <LinearLayout
                        android:id="@+id/LinearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="false"
                        android:background="@color/green_l"
                        android:orientation="vertical" >
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                   

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="false"
                        android:layout_marginBottom="0dp"
                        android:background="@color/green_dark"
                        android:orientation="vertical" >
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                   
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="false"
                        android:layout_marginBottom="0dp"
                        android:background="@color/green_l"
                        android:orientation="vertical" >
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <ScrollView
                android:id="@+id/program_detail_synopsis"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/program_detail_info" >

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="80dp" >
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                          <TextView
                        android:id="@+id/program_detail_synopsis_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="0dp"
                        android:text="@string/program_detail_synopsis_label"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/program_detail_synopsis_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/program_detail_synopsis_label"
                        android:layout_below="@+id/program_detail_synopsis_label"
                        android:layout_centerHorizontal="false"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="5dp"
                        android:gravity="left"
                        android:textColor="@color/gray_clear" />
                    
                     
                    
                     <TextView
                         android:id="@+id/program_detail_text_tree"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_alignParentTop="true"
                         android:layout_centerHorizontal="true"
                         android:layout_gravity="center"
                         android:layout_marginLeft="11dp"
                         android:layout_marginRight="5dp"
                         android:gravity="left"
                         android:text="@string/program_detail_info_tree"
                         android:textStyle="bold" />

                    <TextView
                        android:id="@+id/program_detail_info_producer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/program_detail_text_tree"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="5dp"
                        android:gravity="left"
                        android:textColor="@color/gray_clear" />
                    
                    <TextView
                         android:id="@+id/program_detail_text_two"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_alignParentTop="true"
                         android:layout_centerHorizontal="true"
                         android:layout_gravity="center"
                         android:layout_marginLeft="11dp"
                         android:layout_marginRight="5dp"
                         android:gravity="left"
                         android:text="@string/program_detail_info_two"
                         android:textStyle="bold" />

                    <TextView
                        android:id="@+id/program_detail_info_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/program_detail_text_two"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="5dp"
                        android:gravity="left"
                        android:textColor="@color/gray_clear" />

                   
                    
                    <TextView
                             android:id="@+id/program_detail_text_one"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_alignParentTop="true"
                             android:layout_centerHorizontal="false"
                             android:layout_gravity="center"
                             android:layout_marginLeft="11dp"
                             android:layout_marginRight="5dp"
                             android:gravity="left"
                             android:text="@string/program_detail_info_one"
                             android:textStyle="bold" />

                    <TextView
                        android:id="@+id/program_detail_info_periodicity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/program_detail_text_one"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="5dp"
                        android:gravity="left"
                        android:textColor="@color/gray_clear" />

                    </LinearLayout>

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
        <LinearLayout
        android:id="@+id/program_detail_border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/program_detail_desc" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green_l" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green_dark" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green_l" >
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/program_detail_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/program_detail_border"
        android:animateLayoutChanges="true"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/program_detail_title_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/green_l" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/program_detail_title_rigth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/green_medium"
                    android:gravity="center"
                    android:paddingLeft="30dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/label_title_last_chapter" />

                <ImageView
                    android:id="@+id/program_detail_image_rigth"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="-3.5dp"
                    android:layout_marginTop="-10dp"
                    android:contentDescription="@string/programming_image"
                    android:src="@drawable/t_title" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/program_detail_label"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/program_detail_title"
        android:background="@color/green_dark"
        android:animateLayoutChanges="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/program_detail_label_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginTop="5dp"
            android:text="Emisiones"
            android:textColor="@color/white" />
    </LinearLayout>

    <ListView
        android:id="@+id/program_detail_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/program_detail_label"
        android:layout_marginTop="0dp"
        android:listSelector="@color/green_low"
        android:smoothScrollbar="true" >

    </ListView>
    </RelativeLayout>
</RelativeLayout>