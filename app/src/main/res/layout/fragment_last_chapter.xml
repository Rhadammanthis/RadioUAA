<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center" >
    
    <LinearLayout
        android:id="@+id/last_chapter_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ProgressBar
                android:id="@+id/last_chapter_image_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/last_chapter_image_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_app_radio" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >
    
     <LinearLayout
        android:id="@+id/last_chapter_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:baselineAligned="false" >

       <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/last_chapter_swap"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/last_chapter_title_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="Últimas Emisiones"
                    android:textColor="@color/green_low" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/green_medium"
                    android:gravity="bottom"
                    android:orientation="vertical" >

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/last_chapter_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/last_chapter_title_rigth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/green_medium"
                    android:gravity="center"
                    android:text="@string/title_left"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/last_chapter_image_rigth"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="-4dp"
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/t_title" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/last_chapter_title_slogan"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/green_dark"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/last_chapter_slogan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Proyección de la voz Universitaria"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

    </LinearLayout>

    <ListView
        android:id="@+id/last_chapter_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/last_chapter_label"
        android:listSelector="@color/green_low"
        android:smoothScrollbar="true" >

    </ListView>
    

</LinearLayout>

    </LinearLayout>
