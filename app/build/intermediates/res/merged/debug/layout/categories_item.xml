<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/last_chapter_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/last_chapter_item_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/textura_program" >

        <ProgressBar
            android:id="@+id/progress_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:paddingRight="30dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/categories_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="false"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:alpha=".8"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/categories_item_triangle"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dip"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/categories_item_triangle"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:background="@drawable/triangle_white" >

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/categories_item_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/categories_name_program"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="false"
                    android:gravity="bottom|right"
                    android:paddingRight="20dp"
                    android:textColor="@color/green_l" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/last_chapter_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|right"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/gray_clear" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/green_l"
            android:orientation="vertical" >
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>